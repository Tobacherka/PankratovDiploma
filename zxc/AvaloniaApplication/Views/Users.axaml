<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication.Views.Users">

	<Grid RowDefinitions="1.25* 30*">
		<Button Background="Transparent" Padding="0" Margin="25 0" HorizontalAlignment="Left" VerticalAlignment="Stretch">
			<Image Source="{SvgImage /Assets/add user.svg}"/>
		</Button>

		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
			<Grid x:Name="GridForUsers" RowDefinitions="* * * * * *" ColumnDefinitions="* * * * * *" Margin="12.5 0"/>
		</ScrollViewer>
	</Grid>

</UserControl>
