<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication.Views.Cart">

	<Grid RowDefinitions="* auto auto">
		<ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Row="0">
			<Grid x:Name="GridForCart" Margin="12.5 0" RowDefinitions="* * * * * *" ColumnDefinitions="* * * * * *"/>
		</ScrollViewer>
			
		<Button x:Name="btnEmptyTheTrash" Classes="white" Grid.Row="2" CornerRadius="7" Padding="15 7.5" Margin="12.5 0 0 12.5" Background="#bfff0000" FontSize="15" Foreground="#ffffff" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center">
				<TextBlock Text="Очистить корзину"/>
		</Button>

		<TextBlock Grid.Row="1" x:Name="tbTotalCost" Text="Общая сумма:" Margin="0 0 12.5 12.5" FontSize="15" Foreground="#000000" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
		
		<Button x:Name="btnPlaceAnOrder" Classes="white" Grid.Row="2" CornerRadius="7" Padding=" 15 7.5" Margin="0 0 12.5 12.5" Background="#bfff0000" FontSize="15" Foreground="#ffffff" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center">
			<TextBlock Text="Оформить заказ"/>
		</Button>
	</Grid>
	
</UserControl>
