<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="AvaloniaApplication.Views.Profile">

	<Grid x:Name="GridForProfile" ColumnDefinitions="* 3*" RowDefinitions="* * 0.33* 0.33* 0.33* *">
		<ScrollViewer Grid.Column="1" Grid.RowSpan="6" Margin="0" VerticalScrollBarVisibility="Hidden">
			<Grid Margin="87.5 37.5" RowDefinitions="* *">
				<StackPanel Margin="0 0 0 25" Spacing="7.5">
					<TextBlock Text="Персональная информация:" FontSize="15" FontWeight="Bold" TextDecorations="Underline"/>

					<TextBlock Margin="0 7.5 0 0" FontSize="13" FontWeight="Medium" Text="ФИО:"/>
					<TextBox x:Name="tbFullName" Classes="black" IsEnabled="False" FontSize="11" CornerRadius="7" Background="Transparent" BorderThickness="1.25" BorderBrush="#000000" MinHeight="0" Padding="5" Watermark="Не указано" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

					<TextBlock Margin="0 7.5 0 0" FontSize="13" FontWeight="Medium" Text="Дата рождения:"/>
					<TextBox x:Name="tbDateBirthday" Classes="black" IsEnabled="False" FontSize="11" CornerRadius="7" Background="Transparent" BorderThickness="1.25" BorderBrush="#000000" MinHeight="0" Padding="5" Watermark="Не указано" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

					<TextBlock Margin="0 7.5 0 0" FontSize="13" FontWeight="Medium" Text="Адрес доставки:"/>
					<TextBox x:Name="tbAddress" Classes="black" IsEnabled="False" FontSize="11" CornerRadius="7" Background="Transparent" BorderThickness="1.25" BorderBrush="#000000" MinHeight="0" Padding="5" Watermark="Не указано" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

					<TextBlock Margin="0 7.5 0 0" FontSize="13" FontWeight="Medium" Text="Банковская карта:"/>
					<TextBox x:Name="tbBandCard" Classes="black" IsEnabled="False" FontSize="11" CornerRadius="7" Background="Transparent" BorderThickness="1.25" BorderBrush="#000000" MinHeight="0" Padding="5" Watermark="Не указано" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
				</StackPanel>
					
				<StackPanel Grid.Row="1" Margin="0 25 0 0" Spacing="7.5">
					<TextBlock Text="Контактная информация:" FontSize="15" FontWeight="Bold" TextDecorations="Underline"/>
					
					<TextBlock Margin="0 7.5 0 0" FontSize="13" FontWeight="Medium" Text="Номер телефона:"/>
					<TextBox x:Name="tbPhone" Classes="black" IsEnabled="False" FontSize="11" CornerRadius="7" Background="Transparent" BorderThickness="1.25" BorderBrush="#000000" MinHeight="0" Padding="5" Watermark="Не указано" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

					<TextBlock Margin="0 7.5 0 0" FontSize="13" FontWeight="Medium" Text="Электронная почта:"/>
					<TextBox x:Name="tbEmail" Classes="black" IsEnabled="False" FontSize="11" CornerRadius="7" Background="Transparent" BorderThickness="1.25" BorderBrush="#000000" MinHeight="0" Padding="5" Watermark="Не указано" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
				</StackPanel>
			</Grid>
		</ScrollViewer>
	</Grid>
	
</UserControl>
